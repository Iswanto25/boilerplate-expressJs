# Database
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Common
NODE_ENV=development
PORT=3004
HOST=0.0.0.0
BASE_URL=http://localhost:3004
DOMAIN=localhost
version=1.0.0

# Security
DATA_ENCRYPTION_KEY=your-32-char-hex-key-here-change-this-in-production

# API Signature (untuk melindungi endpoint tertentu dengan HMAC-SHA256)
USER_KEY=superSecret
SECRET_KEY=secretKey

# JWT
JWT_SECRET=your-jwt-secret-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-change-this-in-production
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Password Security (Optional - enhances password hashing)
SALT_HASH=your-custom-salt-string-change-this-in-production
SALT_ROUNDS=5

# S3/MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=uploads
MINIO_USE_SSL=false
MINIO_REGION=us-east-1

# SMTP
APP_NAME=Boilerplate Express
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com

# CORS (comma-separated list of allowed origins, use * for all)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001